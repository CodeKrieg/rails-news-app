<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@ad, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :url %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :url, placeholder: "Your URL" %>
        </div>
      </div>
       <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :html %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :html, rows:10,  placeholder: "html code from google ads etc" %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Create Advertisement", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel", ads_path %> ]
    </div>
  </div>
</div>