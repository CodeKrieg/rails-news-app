<div class="row">
  <div class="col-lg-12">
    <h1><%= @ad.title %></h1>
    <% if admin_signed_in? %>
      <%= link_to "Edit", edit_ad_path(@ad) %>
      <%= link_to "Delete", article_path(@ad), method: :delete, data: {confirm: "Are you sure you want to delete this article?"} %>
    <% end %>
    <hr>
    <hr>
    <p><%= @ad.url %></p>
    <hr>
  </div>
</div>