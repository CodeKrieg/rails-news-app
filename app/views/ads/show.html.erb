<div class="row">
  <div class="col-lg-12">
    <h1><%= @ad.title %></h1>
    <%= @ad.url.html_safe %>
    <br></br>
    <%=raw @ad.html %>
    <% if admin_signed_in? %>
      <%= link_to "Edit", edit_ad_path(@ad) %>
      <%= link_to "Delete", ad_path(@ad), method: :delete, data: {confirm: "Are you sure you want to delete this article?"} %>
    <% end %>
    </div>
</div>