<div class="row">
  <div class="col-lg-12">
    <h1><%= @ad.title %></h1>
    <%= @ad.url.html_safe %>
    <%= image_tag @ad.image.url(:featured), class:"img-responsive" %>
    <br></br>
    <%=raw @ad.html %>
      <%= link_to "Edit", edit_ad_path(@ad), class: "btn btn-small btn-primary" %>
      <%= link_to "Delete", ad_path(@ad), method: :delete, data: {confirm: "Are you sure you want to delete this ad?"},class: "btn btn-danger btn-small" %>
    </div>
</div>