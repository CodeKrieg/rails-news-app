<% obj.each do |article| %>
  <section class="news">
    <div class="container">
      <div class="row">
        <div class="col-xs-3">
          <div class="panel panel-info">
            <%= image_tag article.featured.url(:medium), class: "img-responsive" %>
            <div class="panel-body">
              <h4><%= truncate(article.title, length: 25) %></h4>
              <p><%= article.created_at.strftime("%B %d, %Y") %></p>
              <p><%= truncate(article.description, length: 100) %></p>
              <%= link_to "Read More", article_path(article) %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>

